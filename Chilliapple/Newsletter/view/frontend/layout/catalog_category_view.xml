<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="newsletter_recaptcha_components" template="Chilliapple_Newsletter::js/components.phtml" ifconfig="newsletter/general/active"/>
        </referenceBlock>
        <referenceContainer name="sidebar.additional">
        	 <block class="Magento\Cms\Block\Block" name="join-our-education">
                <arguments>
                    <argument name="block_id" xsi:type="string">join-our-education</argument>
                </arguments>
            </block>
                <block class="Magento\Catalog\Block\Category\View" name="sidebar.newsletter" template="Chilliapple_Newsletter::subscribe.phtml" after="-"/>
        </referenceContainer>
    </body>
</page>
