<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
     <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">flag_form.flag_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <settings>
        <buttons>
            <button name="back" class="Chilliapple\StoreFlag\Block\Adminhtml\StoreFlag\Edit\Back"/>
            <button name="reset" class="Chilliapple\StoreFlag\Block\Adminhtml\StoreFlag\Edit\Reset"/>
            <button name="delete" class="Chilliapple\StoreFlag\Block\Adminhtml\StoreFlag\Edit\Delete"/>
            <button name="save_and_continue" class="Chilliapple\StoreFlag\Block\Adminhtml\StoreFlag\Edit\SaveAndContinue"/>
            <button name="save" class="Chilliapple\StoreFlag\Block\Adminhtml\StoreFlag\Edit\SaveButton"/>
        </buttons>
        <namespace>flag_form</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>flag_form.flag_data_source</dep>
        </deps>
    </settings>
