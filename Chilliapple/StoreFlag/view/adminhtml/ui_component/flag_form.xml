<dataSource name="flag_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <settings>
            <submitUrl path="storeflag/storeflag/save"/>
        </settings>
        <dataProvider class="Chilliapple\StoreFlag\Ui\DataProvider\Form\StoreFlagDataProvider" name="flag_data_source">
            <settings>
                <requestFieldName>flag_id</requestFieldName>
                <primaryFieldName>flag_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

    <fieldset name="general">
        <settings>
            <label translate="true">Store Flag</label>
        </settings>
         <field name="flag_image" formElement="fileUploader">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">storeflag</item>
                </item>
            </argument>
            <settings>
                <elementTmpl>ui/form/element/uploader/uploader</elementTmpl>
                <dataType>string</dataType>
                <label translate="true">Country Flag Image</label>
                <visible>true</visible>
                <required>true</required>
                <notice>Allowed file types: jpeg, gif, png.</notice>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <required>true</required>                        
                        <uploaderConfig>
                            <param xsi:type="url" name="url" path="storeflag/storeflag_image/upload"/>
                        </uploaderConfig>
                        <previewTmpl>Chilliapple_StoreFlag/image-preview</previewTmpl>
                    </settings>
                </fileUploader>
            </formElements>
        </field> 

        <field name="flag_url" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">URL</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                </item>
            </argument>
        
        </field>


    </fieldset>

</form>
