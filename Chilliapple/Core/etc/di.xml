<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <type name="Chilliapple\Core\Logger\Handler">
        <arguments>
            <argument name="filesystem" xsi:type="object">Magento\Framework\Filesystem\Driver\File</argument>
        </arguments>
    </type>
    <type name="Chilliapple\Core\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">chilliapple-modules.log</argument>
            <argument name="handlers"  xsi:type="array">
                <item name="system" xsi:type="object">Chilliapple\Core\Logger\Handler</item>
            </argument>
        </arguments>
    </type>
</config>